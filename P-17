class BankAccount:
    def __init__(self):
        self.balance = 1000
    
    def withdraw(self, amount):
        if amount > self.balance:
            print("Ошибка: Недостаточно средств на счете!")
        else:
            self.balance -= amount
            print(f"Баланс: {self.balance}")
    
    def deposit(self, amount):
        if amount < 0:
            print("Ошибка: Нельзя пополнить отрицательной суммой!")
        else:
            self.balance += amount
            print(f"Баланс: {self.balance}")



account = BankAccount()
print(f"Ваш баланс: {account.balance}")

account.withdraw(1500) 
account.deposit(-100)
