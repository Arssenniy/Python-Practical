a = float(input("Vvedite 1 chislo:"))
b = float(input("Vvedite 2 chislo"))
operator = input("Operator (+, -, *, /)")

if operator == "+":
    print(a + b)
elif operator == "-":
    print(a - b)
elif operator == "*":
    print(a * b)
elif operator == "/"  and b != 0:
    print(a / b)
elif operator == "/" and b == 0:
    print("na 0 delite nelza")
else:
   print("oshibka")
